pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                script {
                    sh 'cd BHD.Services/BHD.Logger'
                    sh 'dotnet restore'
                    sh 'dotnet build'
                }
            }
        }
    }
    
    post {
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}